{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": [
            "es2021"
        ],
        "allowJs": true,
        "declaration": false,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "rootDirs": ["./src"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./"
    }
}
